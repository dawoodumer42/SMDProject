<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="477dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/ic_person_black_24dp" />
    <ImageView
        android:id="@+id/home_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/home_image"/>

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/receive_card"
        android:layout_marginLeft="5dp"
        android:background="@drawable/logo_app" />

    <TextView
        android:id="@+id/slogn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:fontFamily="@font/nunito_bolditalic"
        android:text="@string/slogan"
        android:textColor="@color/colorWhite" />

    <androidx.cardview.widget.CardView
        android:id="@+id/send_card"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_below="@+id/home_img"
        android:layout_marginEnd="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/LightBlue"/>
        <ImageView
            android:id="@+id/send_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_airport_shuttle_black_24dp"
            android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/send_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_logo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-16dp"
                android:fontFamily="@font/nunito_bolditalic"
                android:text="Create Send Request"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/send_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_req"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Send your items now!"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/send_desc"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-58dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
</RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/receive_card"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_below="@+id/send_card"
        android:layout_marginEnd="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"/>
            <ImageView
                android:id="@+id/carry_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_shopping_cart_black_24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/carry_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carry_logo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/nunito_bolditalic"
                android:text="Create Carry Request"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/carry_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carry_req"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-11dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Receive and deliver items!"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/carry_desc"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-58dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>