<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/pureWhite"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/CrrTime"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:background="@drawable/button_rectangle"
                android:text="5 May"
                android:textColor="#ffffff"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:layout_marginLeft="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/src_dest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lahore ..... Faisalabad"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/crrydate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="Date 2019, 3 May"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/crrytime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="Time 13:44:30"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_editor_absoluteX="0dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>

